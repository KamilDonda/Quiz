<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:fontFamily">@font/shadows_into_light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/button_padding</item>
        <item name="android:paddingBottom">@dimen/button_padding</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="android:fontFamily">@font/shadows_into_light</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="SubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_font_size</item>
    </style>

    <style name="CategoryNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/category_font_size</item>
    </style>

    <style name="ProgressBarStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="QuestionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/question_font_size</item>
        <item name="android:padding">@dimen/pb_padding</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="HistoryTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>